{
  "name": "Readable web specs",
  "version": "1.0",
  "description": "Improve the readability of web documentation",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.whatwg.org/*"],
      "css": [
        "base.css",
        "whatwg.css"
      ]
    },
    {
      "matches": ["https://*.w3.org/*"],
      "css": [
        "base.css",
        "w3.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/visibility16.png",
      "32": "images/visibility32.png",
      "64": "images/visibility64.png",
      "128": "images/visibility128.png"
    }
  },
  "icons": {
    "16": "images/visibility16.png",
    "32": "images/visibility32.png",
    "64": "images/visibility64.png",
    "128": "images/visibility128.png"
  },
  "manifest_version": 2
}
