{
  "name": "Readable web specs",
  "version": "1.2",
  "description": "Improve the readability of web documentation",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.w3.org/TR*",
        "https://w3c.github.io/*",
        "https://*.csswg.org/*",
        "https://drafts.fxtf.org/*",
        "https://majido.github.io/*"
      ],
      "css": [
        "base.css",
        "w3-whatwg.css",
        "w3.css"
      ]
    },
    {
      "matches": [
        "https://*.whatwg.org/*"
      ],
      "css": [
        "base.css",
        "w3-whatwg.css",
        "whatwg.css"
      ]
    },
    {
      "matches": [
        "http://www.ecma-international.org/ecma-262/*"
      ],
      "css": [
        "base.css",
        "ecma.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/visibility16.png",
      "32": "images/visibility32.png",
      "64": "images/visibility64.png",
      "128": "images/visibility128.png"
    }
  },
  "icons": {
    "16": "images/visibility16.png",
    "32": "images/visibility32.png",
    "64": "images/visibility64.png",
    "128": "images/visibility128.png"
  },
  "manifest_version": 2
}
